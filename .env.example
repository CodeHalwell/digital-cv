# Digital CV Environment Configuration
# Copy this file to .env and update with your actual values

# Required: OpenAI API key for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Pushover notifications for contact recording and question tracking
PUSHOVER_TOKEN=your_pushover_app_token_here
PUSHOVER_USER=your_pushover_user_key_here

# Optional: Server configuration
PORT=7860

# Development/Debug settings (set to false in production)
DEBUG=false